{
  "name": "microsites",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18.12.1",
    "npm": "8.5.0",
    "yarn": "1.22.19"
  },
  "scripts": {
    "dev": "next dev",
    "dev-nginx": "bin/dev-nginx",
    "build": "next build",
    "heroku-postbuild": "bin/heroku-build",
    "start": "next start",
    "lint": "next lint",
    "lint::fix": "next lint --fix",
    "format": "npx stylelint '**/*.{css,scss}' --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test-coverage": "cross-env NODE_ENV=test jest --silent --collectCoverage",
    "content-types": "cf-content-types-generator -s $SPACE -t $TOKEN -e $ENVIRONMENT -o src/types/contentful-types && yarn next lint --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prettier-format": "prettier --write src/",
    "prepare": "husky install"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^15.12.1",
    "@contentful/rich-text-types": "^15.12.1",
    "@emeritus-engineering/blueprint": "^2.0.38",
    "@emeritus-engineering/blueprint-core-components": "^2.0.18",
    "@emeritus-engineering/blueprint-core-modules": "^2.2.19",
    "@emeritus-engineering/contentful-clients": "^1.0.1",
    "@emeritus-engineering/ee-api": "^1.9.4",
    "@fontsource/roboto": "^4.5.8",
    "@next/font": "13.1.1",
    "@sentry/nextjs": "^7.8.1",
    "@types/uuid": "^8.3.4",
    "axios": "^1.3.0",
    "bootstrap": "^5.2.0",
    "classnames": "^2.3.1",
    "contentful": "^9.1.32",
    "critters": "^0.0.16",
    "loader-utils": "^3.2.0",
    "next": "13.1.1",
    "next-translate": "^1.5.0",
    "react": "18.2.0",
    "react-cookie": "^4.1.1",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.0",
    "react-intersection-observer": "^9.4.3",
    "react-responsive": "^9.0.0-beta.10",
    "react-select": "^5.6.1",
    "react-toastify": "^9.1.1",
    "safe-json-stringify": "^1.2.0",
    "uuid": "^9.0.0",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@next/bundle-analyzer": "^13.2.4",
    "@next/eslint-plugin-next": "^13.1.6",
    "@storybook/addon-essentials": "^7.0.0-beta.31",
    "@storybook/addon-interactions": "^7.0.0-beta.31",
    "@storybook/addon-links": "^7.0.0-beta.31",
    "@storybook/blocks": "^7.0.0-beta.31",
    "@storybook/nextjs": "^7.0.0-beta.31",
    "@storybook/react": "^7.0.0-beta.31",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.15",
    "@types/safe-json-stringify": "^1.1.2",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "autoprefixer": "^10.4.14",
    "axios-mock-adapter": "^1.21.2",
    "cf-content-types-generator": "^2.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-extended": "^3.1.0",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "next-router-mock": "^0.9.1",
    "node-mocks-http": "^1.12.1",
    "postcss": "^8.4.21",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^8.2.0",
    "prettier": "^2.8.8",
    "sass": "^1.54.0",
    "storybook": "^7.0.0-beta.31",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.7.4",
    "util": "^0.12.4"
  },
  "resolutions": {
    "styled-components": "^5",
    "webpack": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write src/",
      "eslint src/**/*.{ts,tsx,js}",
      "git add"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
